{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "AUTH_PASSWORD",
    "AUTH_SECRET",
    "OPENAI_API_KEY",
    "STRATUSCODE_MODEL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    }
  }
}

